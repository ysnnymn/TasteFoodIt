@model List<TasteFoodIt.Entities.Chef>
@{
    ViewBag.Title = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid" id="container-wrapper">


    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Başlık</th>
                                <th>Ad-Soyad</th>
                                <th>Açıklama</th>
                                <th>Resim</th>
                                <th>Güncelle</th>
                                <th>Sil</th>



                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                            <td><a href="/Chef/UpdateChef/@item.ChefId" class="btn  btn-success">Güncelle</a></td>
                            <td><a href="/Chef/DeleteChef/@item.ChefId" class="btn  btn-danger">Sil</a></td>
                                </tr>
                        }

                            </tbody>
                        </table>

      </div>
                    <div class="card-footer"></div>
                    
                        <a href="/Chef/CreateChef" class="btn  btn-info">Chef Oluştur</a>
                    
                </div>
            </div>
        </div>


    </div>



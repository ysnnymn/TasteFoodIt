@model TasteFoodIt.Entities.Chef
@{
    ViewBag.Title = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Şef Güncelleme  Sayfası</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x=>x.ChefId)
                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Ad-Soyad</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <br />
                            <label>Resim</label>
                            @Html.EditorFor(x => x.ImageUrl, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                            <br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <br />

                        </div><button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>

                </div>


            </div>
        </div>
    </div>
</div>


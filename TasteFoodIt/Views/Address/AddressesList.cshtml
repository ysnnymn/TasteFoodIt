@model List<TasteFoodIt.Entities.Address>
@{
    ViewBag.Title = "AddressesList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">


    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Telefon Numarası</th>
                                <th>Mail Adresi</th>
                                <th>Açıklama</th>



                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {
                               
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@item.Description</td>



                                </tr>
                            <td><a href="/Address/UpdatedAddress/@item.AddressId" class="btn  btn-success">Güncelle</a></td>
                            <td><a href="/Address/DeleteAddress/@item.AddressId" class="btn  btn-danger">Sil</a></td>
                        }

                            </tbody>
                        </table>


                    </div>
                    <div class="card-footer"></div>
                   
                        <a href="/Address/CreatedAddress" class="btn  btn-info">Adres Oluştur</a>
                    
                </div>
            </div>
        </div>


    </div>


@model TasteFoodIt.Entities.Slider
@{
    ViewBag.Title = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Ekleme Sayfası </h1>

    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Slider Ekleme</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x => x.SliderId)
                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Açıklama</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                            <br />
                            <label>Slogan</label>
                            @Html.TextAreaFor(x => x.MinDescription, new { @class = "form-control" })
                            <br />

                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                        </div>

                        <button type="submit" class="btn btn-primary">Slider'ı Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


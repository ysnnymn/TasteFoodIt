@model List<TasteFoodIt.Entities.Slider>
@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">


    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Slogan</th>
                                <th>Resim</th>
                                <th>Güncelle</th>
                                <th>Sil</th>



                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {

                                count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.MinDescription</td>
                                <td>@item.ImageUrl</td>
                                <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn  btn-success">Güncelle</a></td>
                                <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn  btn-danger">Sil</a></td>


                            </tr>
                            
                        }

                            </tbody>
                        </table>






                    </div>
                    <div class="card-footer"></div>
                   @if (ViewBag.slider<3)
                   {
            <a href="/Slider/CreateSlider" class="btn  btn-info">Slider Oluştur</a>
                   }
                        
                    
                </div>
            </div>
        </div>


    </div>

@model List<TasteFoodIt.Entities.OpenDayHour>
@{
    ViewBag.Title = "OpenDayHoursList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">


    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>GünLer</th>
                                <th>Açılış Kapanış Saatleri</th>
                                <th>Güncelle</th>
                                <th>Sil</th>

                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {

                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.DayName</td>
                                    <td>@item.OpenHourRange</td>


                                    <td><a href="/OpenDayHours/UpdateOpenDayHour/@item.OpenDayHourId" class="btn  btn-success">Güncelle</a></td>
                                    <td><a href="/OpenDayHours/DeleteOpenDayHour/@item.OpenDayHourId" class="btn  btn-danger">Sil</a></td>

                                </tr>

                            }

                        </tbody>
                    </table>

                </div>
                <div class="card-footer"></div>
                @if (ViewBag.open < 7)
                {
                    <a href="/OpenDayHours/CreateOpenDayHour" class="btn  btn-info">Gün Ekle</a>
                }
            </div>
        </div>
    </div>


</div>
